<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title><%= typeof title != 'undefined' ? title: 'Asset Manager' %></title>
	<link rel="stylesheet" href="/css/custom.css">
</head>
<body class="login-container">
        <div class="loader"></div>
        <div class="login-form">
            <div class="brand"></div>
           <!-- <div class="header-caption">Log in</div> -->
            <form action="/login" method="POST" class="login">
                <div class="form-group">
                    <label for="login_name">User name</label>
                    <input type="text" name="login_name" id="login_name" />
                </div>

                <div class="form-group">
                    <label for="password">AD password</label>
                    <input type="password" name="password" id="password" />
                </div>

                <div class="form-group">
                    <button type="submit" id="login_button" class="add_button">Login</button>	
                </div>
            </form>
        </div> 
    
    <script src="/js/login-script.js"></script>
</body>
</html>